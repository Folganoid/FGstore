{% if cats|length > 0 %}

    <h3>Категории {{ id }}</h3>
    <ul>
        {% for cat in cats %}
            <li>{{ cat['name'] }} - {{ cat['notice'] }} - <a
                        href="{{ twigLink('item_category', {'id': cat['id']}) }}">link</a></li>
        {% endfor %}

    </ul>

{% endif %}


{% if items|length > 0 %}

    <br>
    <h3>Товары {{ id }}</h3>
    <ul>
        {% for item in items %}
            <li>{{ item['name'] }} - {{ item['notice'] }} - <a
                        href="{{ twigLink('item_one', {'id': item['id']}) }}">link</a></li>
        {% endfor %}

    </ul>

{% endif %}