<div class="col-md-6">

    <h3 align="center">Категория {{ parentName['name'] }}</h3>
    <h4 align="center">({{ parentName['notice'] }})</h4>

    {% if cats|length > 0 %}
        <br>
        <ul>
            {% for cat in cats %}
                <li><b>{{ cat['name'] }}</b> ({{ cat['notice'] }}) <a class="pull-right"
                    href="{{ twigLink('item_category', {'id': cat['id']}) }}">перейти...</a>
                </li>
            {% endfor %}
        </ul>

    {% endif %}

</div>

<div class="col-md-6">
    {% if items|length > 0 %}

        <h3 align="center">Товары</h3>
        <ul>
            {% for item in items %}
                <li><b>{{ item['name'] }}</b> ({{ item['notice'] }}) <a class="pull-right"
                    href="{{ twigLink('item_one', {'id': item['id']}) }}">перейти...</a>
                </li>
            {% endfor %}
        </ul>

    {% endif %}
</div>
