<h3 class="text-center cat_string1">{{ parentName['name'] }}<i> ({{ parentName['notice'] }})</i></h3>
<div class="col-xs-1 col-md-3"></div>
<div class="col-xs-10 col-md-6">
    {% if cats|length > 0 %}
        <br>
        <table width="100%" class="catalog">
            {% for cat in cats %}
            <tr>
                <td><b>{{ cat['name'] }}</b> ({{ cat['notice'] }})</td>
                <td>
                    <a class="pull-right btn btn-primary btn-xs"
                       href="{{ twigLink('item_category', {'id': cat['id']}) }}">view category...</a>
                </td>
                {% endfor %}
        </table>
    {% endif %}
</div>
<div class="col-xs-1 col-md-3"></div>
<div class="row"></div>
{% if items|length > 0 %}
    <h3 class="text-center cat_string2">Items</h3>
    <div class="col-xs-1 col-md-3"></div>
    <div class="col-xs-10 col-md-6">
        <div>
            <table width="100%" class="catalog">
                {% for item in items %}
                    <tr>
                        <td><b>{{ item['name'] }}</b> ({{ item['notice'] }})</td>
                        <td>
                            <a class="pull-right btn btn-primary btn-xs"
                               href="{{ twigLink('item_one', {'id': item['id']}) }}">view item...</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    <div class="col-xs-1 col-md-3"></div>
{% endif %}

